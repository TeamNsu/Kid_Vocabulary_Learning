<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="3.8"
    android:orientation="horizontal"
    tools:context=".AppleCount_Activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <ImageView
            android:id="@+id/Apple_ImageView"
            android:layout_marginLeft="90dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/object_10"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_marginLeft="60dp"
        android:padding="20dp"
        android:layout_marginBottom="25dp"
        android:weightSum="4"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:weightSum="3"
            android:layout_margin="2dp"
            android:layout_height="match_parent">

            <ImageButton
                android:id="@+id/btn_1"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/number_1"
                android:scaleType="fitCenter"
                style="@android:style/Holo.ButtonBar"
                />
            <ImageButton
                android:id="@+id/btn_2"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/number_2"
                android:scaleType="fitCenter"
                style="@android:style/Holo.ButtonBar"
                />
            <ImageButton
                android:id="@+id/btn_3"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitCenter"
                style="@android:style/Holo.ButtonBar"
                android:src="@drawable/number_3"
                />

     </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:weightSum="3"
            android:layout_margin="2dp"
            android:layout_height="match_parent">

            <ImageButton
                android:id="@+id/btn_4"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitCenter"
                style="@android:style/Holo.ButtonBar"
                android:src="@drawable/number_4"
                />
            <ImageButton
                android:id="@+id/btn_5"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitCenter"
                style="@android:style/Holo.ButtonBar"
                android:src="@drawable/number_5"
            />
            <ImageButton
                android:id="@+id/btn_6"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitCenter"
                style="@android:style/Holo.ButtonBar"
                android:src="@drawable/number_6"
            />

     </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:weightSum="3"
            android:layout_margin="2dp"
            android:layout_height="match_parent">

            <ImageButton
                android:id="@+id/btn_7"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitCenter"
                style="@android:style/Holo.ButtonBar"
                android:src="@drawable/number_7"
                />
            <ImageButton
                android:id="@+id/btn_8"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitCenter"
                style="@android:style/Holo.ButtonBar"
                android:src="@drawable/number_8"
                />
            <ImageButton
                android:id="@+id/btn_9"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitCenter"
                style="@android:style/Holo.Light.ButtonBar"
                android:src="@drawable/number_9"
                />

     </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:weightSum="3"
            android:layout_margin="2dp"
            android:layout_height="match_parent">

            <ImageButton
                android:id="@+id/btn_10"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitCenter"
                style="@android:style/Holo.ButtonBar"
                android:src="@drawable/number_10"
                />
            <ImageButton
                android:id="@+id/btn_volume"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitCenter"
                style="@android:style/Holo.ButtonBar"
                android:src="@drawable/btn_mute"
                />
            <ImageButton
                android:id="@+id/btn_repeat"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitCenter"
                style="@android:style/Holo.ButtonBar"
                android:src="@drawable/btn_repeat"
                />

     </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_weight="1.8"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageButton
            android:layout_margin="2dp"
            android:id="@+id/cross_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/close_button"
            style="@android:style/Holo.ButtonBar"
            android:scaleType="fitStart"
            />

    </LinearLayout>

</LinearLayout>