<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="3"
    android:background="@drawable/number_counting_bg"
    tools:context=".Puzzle_game_Activity">

    <LinearLayout
        android:layout_weight="2"
        android:layout_width="match_parent"
        android:weightSum="10"
        android:layout_marginTop="10dp"
        android:layout_height="match_parent">

        <ImageButton
            android:id="@+id/repeat_volume_btn"
            android:layout_weight=".5"
            android:layout_margin="25dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@android:style/Holo.ButtonBar"
            android:scaleType="fitCenter"
            android:src="@drawable/sound_repeat_icon"/>

        <ImageButton
            android:id="@+id/puzzle_cross_btn"
            android:layout_weight="9.5"
            android:layout_margin="2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@android:style/Holo.ButtonBar"
            android:scaleType="fitStart"
            android:src="@drawable/close_button"/>

    </LinearLayout>

    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:weightSum="3"
        android:padding="10dp"
        android:layout_marginLeft="100dp"
        android:layout_marginRight="80dp"
        android:layout_marginBottom="95dp"
        android:layout_height="match_parent">

        <ImageButton
            android:id="@+id/puzzle_1_btn"
            android:layout_margin="25dp"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            style="@android:style/Holo.ButtonBar"
            android:scaleType="fitCenter"
            android:src="@drawable/number_1"/>

        <ImageButton
            android:id="@+id/puzzle_2_btn"
            android:layout_margin="25dp"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            style="@android:style/Holo.ButtonBar"
            android:scaleType="fitCenter"
            android:src="@drawable/number_5"/>

        <ImageButton
            android:id="@+id/puzzle_3_btn"
            android:layout_margin="25dp"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            style="@android:style/Holo.ButtonBar"
            android:scaleType="fitCenter"
            android:src="@drawable/number_9"/>


    </LinearLayout>

</LinearLayout>